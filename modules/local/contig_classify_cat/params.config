params {
    // Min filesize
    min_filesize_annotated_genbank = '3M'

    // Extra protein encoding genes of interest lacking in the Prokka database
    // to also annotate which can be either FastA format (".faa" protein extension)
    // or GenBank (".gbk" or ".gb") and deflines must follow this format:
    // https://github.com/tseemann/prokka#option---proteins
    // e.g., ">name min_identity~~~min_query_cov~~~min_subject_cov~~~gene~~~product~~~dbxrefs"
    curated_proteins               = ''
    //curated_proteins               = '--proteins FILENAME.fa'

    // Similarity requirement
    evalue                         = '1e-08'
}
